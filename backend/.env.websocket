# ============================================
# WEBSOCKET + REDIS CONFIGURATION
# OPTIMIZED FOR MINIMUM LATENCY
# ============================================
# Copy these settings to your .env file

# ============================================
# BROADCAST DRIVER - USE REDIS
# ============================================
BROADCAST_DRIVER=redis

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ============================================
# WEBSOCKET SERVER CONFIGURATION
# ============================================
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=6001

# ============================================
# PUSHER CREDENTIALS (for Laravel WebSockets)
# ============================================
PUSHER_APP_ID=1
PUSHER_APP_KEY=local-websocket-key
PUSHER_APP_SECRET=local-websocket-secret
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=localhost
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_USE_TLS=false

# ============================================
# WEBSOCKET OPTIMIZATION SETTINGS
# ============================================
# Debug mode (false for production)
WEBSOCKETS_DEBUG=false

# Enable Redis replication for scaling
WEBSOCKETS_REPLICATOR_ENABLED=true

# Client messages (enable for peer-to-peer messaging)
WEBSOCKETS_ENABLE_CLIENT_MESSAGES=true

# Statistics (disable for better performance)
WEBSOCKETS_ENABLE_STATISTICS=false

# Max request size in KB
WEBSOCKETS_MAX_REQUEST_SIZE=250

# Heartbeat interval in seconds (30 = optimal)
WEBSOCKETS_HEARTBEAT_INTERVAL=30

# Connection close timeout in seconds
WEBSOCKETS_CLOSE_TIMEOUT=5

# Connection capacity (null = unlimited)
WEBSOCKETS_CAPACITY=null

# Max connection age in seconds (0 = no limit)
WEBSOCKETS_MAX_CONNECTION_AGE=0

# ============================================
# CACHE CONFIGURATION - USE REDIS
# ============================================
CACHE_DRIVER=redis

# ============================================
# QUEUE CONFIGURATION - USE REDIS (OPTIONAL)
# ============================================
# Uncomment to use Redis for queues (recommended for production)
# QUEUE_CONNECTION=redis

# ============================================
# SESSION CONFIGURATION - USE REDIS (OPTIONAL)
# ============================================
# Uncomment to use Redis for sessions (recommended for production)
# SESSION_DRIVER=redis
